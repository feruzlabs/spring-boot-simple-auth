            <column name="first_name" value="John"/>
            <column name="last_name" value="Doe"/>
            <column name="email" value="user1@example.com"/>
            <column name="role" value="USER"/>
            <column name="enabled" value="true"/>
            <column name="created_at" valueComputed="CURRENT_TIMESTAMP"/>
        </insert>

        <!-- Manager user -->
        <insert tableName="users">
            <column name="username" value="manager1"/>
            <column name="password" value="$2a$10$N.zmdr9k7uOCQb376NoUnuTJ8iAt6Z5EHsM8lE9lBOsl7iKTVemIe"/> <!-- 123456 -->
            <column name="first_name" value="Jane"/>
            <column name="last_name" value="Smith"/>
            <column name="email" value="manager1@example.com"/>
            <column name="role" value="MANAGER"/>
            <column name="enabled" value="true"/>
            <column name="created_at" valueComputed="CURRENT_TIMESTAMP"/>
        </insert>

        <!-- Disabled user (for testing) -->
        <insert tableName="users">
            <column name="username" value="disabled_user"/>
            <column name="password" value="$2a$10$N.zmdr9k7uOCQb376NoUnuTJ8iAt6Z5EHsM8lE9lBOsl7iKTVemIe"/> <!-- 123456 -->
            <column name="first_name" value="Disabled"/>
